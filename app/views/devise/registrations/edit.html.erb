<%= render partial: 'layouts/breadcrumb', locals: { current_title: 'Meus dados de acesso' } %>

<div class="container-no">
  <div class="row">
    <div class="col-sm col-lg-3 mb-4">
      <%= render partial: 'layouts/menu_admin' %>
    </div>
    <div class="col-sm">
      <h5><%= current_user.name %>, edite seus dados <%#= resource_name.to_s.humanize %></h5>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label 'Crie uma nova senha' %> <i></i>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "(Deixe em branco para não alterar)" %>
          <% if @minimum_password_length %>
            <em><small>mínimo de <%= @minimum_password_length %> caracteres</small></em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label 'Confirme a nova senha' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :senha_atual %> <i>(necessária pra criar nova senha)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= link_to "Voltar", :back, class: ["btn btn-light btn-sm"] %>
          <%= f.submit "Atualizar", class: ["btn btn-success btn-sm"] %>
        </div>
      <% end %>
    </div>
    <div class="col-sm">
      <h6>Cancelar sua conta?</h6>

      <p>Se está insatisfeito com nossos serviços <%= button_to "Cancele sua conta", registration_path(resource_name), data: { confirm: "Tem certeza que quer sair da BackSound?" }, method: :delete, class: ["btn btn-danger btn-sm"] %></p>      
    </div>
  </div>
</div>




