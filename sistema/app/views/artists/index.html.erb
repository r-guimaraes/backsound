<%= render partial: 'layouts/breadcrumb', locals: { current_title: 'Procurar bandas' } %>

<div class="row">

  <div class="col-lg-3 mb-4"> <%= render partial: 'layouts/menu_admin' %> </div>

  <div class="col-lg-9 mb-4">

    <h4 class="page-header">Procure a banda ou artista que deseja adicionar</h4>
    <%= form_tag buscar_bandas_url, method: "get", html: { class: "form" } do %>
      <div class="form-group col-xs-4">
        <%= text_field_tag(:artist_name, "", placeholder: "Pesquisar por: ", class: "form-control") %>
      </div>
      <%= submit_tag "Buscar", class: "btn btn-info" %>
    <% end %>

    <br>

    <%- if @artists %>
      <h5 class="page-header">Artistas correspondentes a <%= params[:artist_name] %>:</h5>
      <ul>
        <% @artists.each do |artist| %>
          <li><%= artist.name %> | <%= link_to "Ver mÃºsicas", artist_path(artist.id) %></li>
        <% end %>
      </ul>
    <% end %>


  </div>

</div>