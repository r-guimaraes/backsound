<%= render partial: 'layouts/breadcrumb', locals: { current_title: 'Minhas playlists' } %>

<div class="row">
    <!-- Sidebar Column -->
    <div class="col-lg-3 mb-4">
        <%= render partial: 'layouts/menu_admin' %>
    </div>
    <!-- Content Column -->
    <div class="col-lg-9 mb-4">      
      <p id="notice"><%= notice %></p>

        <h3>Minhas Playlists</h3>

        <table>
          <thead>
            <tr>
              <th>Nome</th>
<!--              <th>Picture</th>-->
              <th>Descrição</th>
              <th>Anúncio</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>

          <tbody>
            <% @playlists.each do |playlist| %>
              <tr>
                <td><%= playlist.name %></td>
<!--                <td><%#= image_tag playlist.picture %></td>-->
                <td><%= playlist.description %></td>
                <td><%= playlist.ad %></td>
                <td><%= link_to 'Ver', playlist %></td>
                <td><%= link_to 'Editar', edit_playlist_path(playlist) %></td>
                <td><%= link_to 'Deletar', playlist, method: :delete, data: { confirm: 'Deletar esta playlist?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to "Nova Playlist", new_playlist_path, class: ["btn btn-info btn-sm"] %>
    </div>
</div>
