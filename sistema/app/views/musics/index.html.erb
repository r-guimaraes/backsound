<%= render partial: 'layouts/breadcrumb', locals: { current_title: 'Minhas músicas' } %>

<div class="row">

  <div class="col-lg-3 mb-4"> <%= render partial: 'layouts/menu_admin' %> </div>

  <div class="col-lg-9 mb-4">
    <p id="notice"><%= notice %></p>

    <h1>Minhas Músicas</h1>

    <table>
      <thead>
      <tr>
        <th>Artista</th>
        <th>Nome</th>
        <th>Album</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @musics.each do |music| %>
        <tr>
          <td><%= music.artist %></td>
          <td><%= music.name %></td>
          <td><%= music.album %></td>
          <td><%= link_to 'Ver', music %></td>
          <td><%= link_to 'Editar', edit_music_path(music) %></td>
          <td><%= link_to 'Remover', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Adicionar Música', new_music_path %>

  </div>

</div>